<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seaded"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- THEME -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teema"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <RadioGroup
            android:id="@+id/themeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <RadioButton
                android:id="@+id/radioSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Süsteemi järgi" />

            <RadioButton
                android:id="@+id/radioLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hele" />

            <RadioButton
                android:id="@+id/radioDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tume" />
        </RadioGroup>

        <!-- COLUMNS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rakenduste veerud"
            android:textStyle="bold"
            android:paddingTop="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arv:"
                android:paddingEnd="10dp"/>

            <TextView
                android:id="@+id/columnsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/columnsSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(3 kuni 5)"
            android:alpha="0.7"
            android:paddingTop="4dp"/>

        <!-- ANIMATION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animatsioon"
            android:textStyle="bold"
            android:paddingTop="18dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/animSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade + scale (stagger)"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muudatused rakenduvad rakenduste vaates."
            android:alpha="0.7"
            android:paddingTop="10dp"/>

    </LinearLayout>
</ScrollView>
