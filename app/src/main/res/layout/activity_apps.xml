<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/aura_bg"
    android:padding="12dp">

    <!-- OTSINGURIBA -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_search"
        android:paddingStart="14dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Otsi rakendust"
            android:textSize="18sp"
            android:textColor="@color/aura_text"
            android:textColorHint="@color/aura_hint"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:padding="0dp" />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_more"
            android:tint="@color/aura_hint"
            android:contentDescription="More" />
    </LinearLayout>

    <!-- PINNED / LEMMIKUD -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoritesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <!-- TÜHI OTSINGU TEKST -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ei leitud ühtegi rakendust"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/aura_hint"
        android:visibility="gone" />

    <!-- KÕIK RAKENDUSED -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp" />

</LinearLayout>
