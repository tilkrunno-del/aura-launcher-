<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Otsinguriba -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Otsi rakendust"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:padding="12dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/btnOpenApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ava rakendused" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/btnSetDefaultLauncher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="M채채ra AURA vaikimisi avakuvarakenduseks" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <!-- FOLLOW SYSTEM -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchFollowSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kasuta s체steemi teemat (auto)"
        android:padding="6dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <!-- DARK MODE (aktiivne ainult siis, kui follow-system on OFF) -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tume re탑iim"
        android:padding="6dp" />

</LinearLayout>
