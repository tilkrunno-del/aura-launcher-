<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/aura_bg"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/aura_text"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnApps"
        style="@style/AuraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/open_apps" />

    <Button
        android:id="@+id/btnHiddenApps"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/hidden_apps" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/aura_divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/theme"
        android:textColor="@color/aura_text"
        android:textStyle="bold"/>

    <Switch
        android:id="@+id/swFollowSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/theme_follow_system"
        android:textColor="@color/aura_text"
        android:layout_marginTop="8dp"/>

    <Switch
        android:id="@+id/swDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/theme_dark"
        android:textColor="@color/aura_text"
        android:layout_marginTop="6dp"/>

</LinearLayout>
