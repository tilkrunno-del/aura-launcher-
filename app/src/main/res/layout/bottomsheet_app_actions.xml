<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_aura_sheet"
    android:padding="16dp">

    <TextView
        android:id="@+id/bsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/aura_text"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/bsSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/aura_text_hint"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/aura_divider"/>

    <Button
        android:id="@+id/btnOpen"
        style="@style/AuraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aura_open"/>

    <Button
        android:id="@+id/btnAppInfo"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/aura_app_info"/>

    <Button
        android:id="@+id/btnFavorite"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/aura_add_favorite"/>

    <Button
        android:id="@+id/btnHideShow"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/aura_hide_app"/>

    <Button
        android:id="@+id/btnUninstall"
        style="@style/AuraButton_Danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/aura_uninstall"/>

</LinearLayout>
