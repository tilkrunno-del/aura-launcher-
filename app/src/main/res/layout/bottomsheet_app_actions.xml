<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_aura_sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bsIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/bsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/aura_text" />

            <TextView
                android:id="@+id/bsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="com.example.app"
                android:textSize="13sp"
                android:textColor="@color/aura_text_hint"
                android:paddingTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bsOpen"
        style="@style/AuraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aura_open" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bsInfo"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aura_app_info"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bsFavorite"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aura_add_favorite"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bsHide"
        style="@style/AuraButton_Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aura_hide_app"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bsUninstall"
        style="@style/AuraButton_Danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aura_uninstall"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>
