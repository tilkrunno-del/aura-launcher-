<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- AURA teema -->
    <style name="Theme.AuraLauncher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- VÃ¤rvid -->
        <item name="colorPrimary">@color/aura_accent</item>
        <item name="colorPrimaryVariant">@color/aura_accent</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/aura_accent</item>
        <item name="colorSecondaryVariant">@color/aura_accent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- Taust -->
        <item name="android:windowBackground">@color/aura_background</item>

        <!-- Font (default) -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Pealkiri tekst -->
    <style name="AuraText.Title">
        <item name="android:textColor">@color/aura_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Sekundaarne tekst -->
    <style name="AuraText.Subtitle">
        <item name="android:textColor">@color/aura_text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Nupu stiil -->
    <style name="AuraButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
