<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuraButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/aura_primary</item>
        <item name="android:textColor">@color/aura_on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuraButton_Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/aura_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/aura_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuraButton_Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/aura_danger</item>
        <item name="android:textColor">@color/aura_on_danger</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay_Aura_BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AuraBottomSheet</item>
    </style>

    <style name="AuraBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/AuraBottomSheetShape</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AuraBottomSheetShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

</resources>
